<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/back"
        android:layout_height="match_parent"
        tools:context=".AddObject">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <RelativeLayout
                android:background="#00468C"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/ic_back"/>
            <TextView
                    android:text="Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:id="@+id/ic_exit"/>

        </RelativeLayout>

    <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:padding="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="English Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/textView"
                    android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint="Type English Name"
                    android:id="@+id/txtEnglishName"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:padding="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Shona Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/texeftView"
                    android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:hint="Type Shona Name"
                    android:id="@+id/txtShonaName"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:padding="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView

                    android:text="Select Category:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:id="@+id/textView4"
                    android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/radioCategoryGroup"
                    android:layout_height="match_parent">
                <RadioButton
                        android:text="Animal"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton"/>
                <RadioButton
                        android:text="Fruit"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2"/>

                <RadioButton
                        android:text="Furniture"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton4"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="Other"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton5"
                        android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:paddingTop="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:src="@drawable/noimage"
                    android:id="@+id/imgProduct"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:layout_height="match_parent">
            <Button
                    android:text="Upload Image"
                    android:layout_width="150dp"
                    android:padding="6dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/btnUploadImage"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Record Object Pronunciation in shona"
                    android:layout_width="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1"/>
        </LinearLayout>
        <TextView
                android:text="Recoding started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:visibility="gone"
                android:textColor="@color/green"
                android:id="@+id/txtRecordingStatus"/>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text=""
                    android:layout_width="wrap_content"
                    android:padding="3dp"
                    android:drawableLeft="@drawable/ic_mic_black_48dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/btnRecord"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Tap the MIC to record"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="SAVE"
                    android:layout_width="150dp"
                    android:padding="6dp"
                    android:background="@color/green"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:id="@+id/btnSave"
                    app:backgroundTint="@color/green"/>
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>