<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primary_quiz"
        tools:context=".phrase">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RelativeLayout
                    android:background="#00468C"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">
                <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_back"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/ic_back"/>
                <TextView
                        android:text="Exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp"
                        android:id="@+id/ic_exit"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"

            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/phrases1"
                        android:id="@+id/imgObject"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                    android:id="@+id/CardOA"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"

            >
                <TextView
                        android:text="A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_optiona"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:text="Playing"
                    android:padding="6dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAudioStatus"/>
            <androidx.cardview.widget.CardView
                    android:id="@+id/CardOB"
                    android:onClick="OptionBClick"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"

            >
                <TextView
                        android:text="B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_optionb"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:id="@+id/nxtBtn"
                    android:orientation="horizontal"
                    android:background="@drawable/next_btn_shape"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center"
            >
                <TextView
                        android:text="NEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:gravity="center"
                        android:textAllCaps="true"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>