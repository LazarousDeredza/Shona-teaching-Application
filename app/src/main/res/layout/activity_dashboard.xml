<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/primary_quiz"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
    <RelativeLayout
            android:background="#00468C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_back"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/ic_back"/>
        <TextView
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:id="@+id/ic_exit"/>

    </RelativeLayout>


    <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:indeterminate="false"
            android:maxHeight="12dp"
            android:minHeight="12dp"
            android:progress="10"
            android:max="20"

            app:progressColor="#ffC107"
            android:background="@color/primary_quiz"
            android:theme="@style/Timer"
            android:id="@+id/quiz_timer"/>



    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"

    >
        <TextView
                android:text="Shona Learning Quiz"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_question"
                android:layout_gravity="center"
                android:textColor="@color/black"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:onClick="OptionAClick"
            android:id="@+id/CardOA"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"

    >
        <TextView
                android:text="A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optiona"
                android:layout_gravity="center"
                android:textColor="@color/black"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/CardOB"
            android:onClick="OptionBClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"

    >
        <TextView
                android:text="B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optionb"
                android:layout_gravity="center"
                android:textColor="@color/black"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/CardOC"
            android:onClick="OptionCClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"

    >
        <TextView
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optionc"
                android:layout_gravity="center"
                android:textColor="@color/black"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:id="@+id/CardOD"
            android:onClick="OptionDClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"

    >
        <TextView
                android:text="D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_optiond"
                android:layout_gravity="center"
                android:textColor="@color/black"
        />
    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:id="@+id/nxtBtn"
            android:orientation="horizontal"
            android:background="@drawable/next_btn_shape"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_50sdp"
    android:gravity="center"
    >
        <TextView
                android:text="NEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"
                android:textAllCaps="true"
        />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>