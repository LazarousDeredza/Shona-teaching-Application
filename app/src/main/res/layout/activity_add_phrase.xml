<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddPhrase">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:gravity="center" android:orientation="vertical">
        <RelativeLayout
                android:background="#00468C"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/ic_back"/>
            <TextView
                    android:text="Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:id="@+id/ic_exit"/>

        </RelativeLayout>
        <TextView
            android:text="Add New Phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
        <TextView
                android:layout_marginBottom="20dp"
                android:text="English Phrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginTop="10dp"/>
        <EditText
                android:layout_width="277dp"
                android:layout_height="72dp"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@color/white"
                android:hint="Type English Phrase Here"
                android:ems="10"
                android:id="@+id/txtEnglish"/>
        <TextView
                android:text="Shona Alternative"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="@color/white"
                android:textSize="25sp"
        />
        <EditText
                android:layout_width="277dp"
                android:padding="10dp"
                android:layout_height="72dp"
                android:inputType="textPersonName"
                android:background="@color/white"
                android:hint="Type Alternative Shona Phrase Here"

                android:ems="10"
                android:id="@+id/txtShona"/>
        <LinearLayout
                android:padding="3dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="120dp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRecordingStatus"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:id="@+id/btnRecord"
                    android:layout_weight="1"/>

        </LinearLayout>
        <TextView
                android:text="Click the Record Button To Record"
                android:layout_width="match_parent"
                android:textStyle="bold"

                android:layout_height="wrap_content" android:id="@+id/textView9"/>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:text="SAVE"
                    android:layout_width="150dp"
                    android:padding="6dp"
                    android:layout_marginLeft="95dp"
                    android:background="@color/green"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:id="@+id/btnSave"
                    app:backgroundTint="@color/green"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>