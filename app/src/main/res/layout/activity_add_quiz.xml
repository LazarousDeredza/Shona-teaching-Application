<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        tools:context=".AddQuiz">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center" android:orientation="vertical">
            <RelativeLayout
                    android:background="#00468C"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">
                <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        app:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:backgroundTint="@color/white"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/ic_back"/>
                <TextView
                        android:text="Home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp"
                        android:id="@+id/ic_exit"/>

            </RelativeLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/signuptitle"
                    android:text="Add Quiz"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Question"
                    android:layout_below="@id/signuptitle"
                    android:background="#30ffffff"
                    android:hint="Question"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:padding="20dp"

                    android:drawablePadding="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="7dp"/>

            <LinearLayout
                    android:id="@+id/ro1"
                    android:layout_below="@id/Question"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="1.    "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="5dp"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Answer1"
                        android:background="#30ffffff"
                        android:hint="Type Answer 1"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:padding="15dp"
                        android:drawablePadding="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="7dp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ro2"
                    android:layout_below="@id/ro1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="2.    "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="5dp"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Answer2"
                        android:background="#30ffffff"
                        android:hint="Type Answer 2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:padding="15dp"
                        android:drawablePadding="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="7dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ro3"
                    android:layout_below="@id/ro2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="3.     "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="5dp"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Answer3"
                        android:background="#30ffffff"
                        android:hint="Type Answer 3"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:padding="15dp"
                        android:drawablePadding="20dp" android:layout_marginTop="7dp" android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp" android:layout_marginBottom="7dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ro4"
                    android:orientation="horizontal"
                    android:layout_below="@id/ro3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="4.    "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="5dp"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Answer4"
                        android:background="#30ffffff"
                        android:hint="Type Answer 4"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:padding="15dp"

                        android:drawablePadding="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lanswers"
                    android:layout_below="@+id/ro4"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Select Correct Answer Position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:id="@+id/txtAnswer"
                    />
                </LinearLayout>
                <LinearLayout

                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_height="match_parent">

                    <RadioGroup
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:id="@+id/radioCategoryGroup"
                            android:padding="3dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="70dp"
                            android:gravity="center"
                            android:background="#D1ECEC"
                            android:layout_centerInParent="true"
                            android:layout_height="match_parent">
                        <RadioButton
                                android:text="1"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButton"/>
                        <RadioButton
                                android:text="2"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButton2"/>

                        <RadioButton
                                android:text="3"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButton4"
                        />
                        <RadioButton
                                android:text="4"

                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButton5"
                                android:layout_weight="1"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSave"
                    android:text="SAVE"
                    android:textSize="25dp"
                    android:layout_below="@+id/lanswers"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/design_default_color_secondary"
                    android:layout_marginTop="10dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>