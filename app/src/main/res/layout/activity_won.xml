<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/primary_quiz"
        android:layout_height="match_parent"
        tools:context=".WonActivity">


    <RelativeLayout
            android:id="@+id/toobar"
            android:background="#00468C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
        <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_back"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/ic_back"/>
        <TextView
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:id="@+id/ic_exit"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/toobar">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/circularProgressBar"
                app:cpb_background_progressbar_color="@color/red"
                app:cpb_background_progressbar_width="@dimen/_10sdp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="@color/lightGreen"
                app:cpb_progressbar_width="10dp"
                app:cpb_progress_max="20"
                app:cpb_progress="10"
                app:cpb_round_border="false"
        />
        <TextView
                android:text="15/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resultText"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                android:layout_centerInParent="true"
        />


    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_below="@id/rl2"
    android:layout_marginTop="@dimen/_10sdp"

    >
        <LinearLayout

                android:id="@+id/btnShare"
                android:background="@drawable/share_shape"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_centerInParent="true">
            <TextView
                    android:text="Show Answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/textView14"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
    >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/celebrate2"
                android:id="@+id/imageView5"/>
    </RelativeLayout>


</RelativeLayout>